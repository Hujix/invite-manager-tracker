{
	"compilerOptions": {
		"noImplicitAny": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"target": "es2017",
		"lib": ["es7"],
		"sourceMap": true,
		"removeComments": false,
		"experimentalDecorators": true,
		"typeRoots": [],
		"types": ["node"],
		"plugins": [
			{
				"name": "tslint-language-service"
			}
		],
		"outDir": "build/"
	}
}
